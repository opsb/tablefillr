<div class="constrained">
	<%= form_for @restaurant, html: { :class => "full-page" } do |f| %>
		<h1>Signup</h1>

		<div class="control-group">
			<%= f.label :name %>
			<%= f.text_field :name, placeholder: 'name of your restaurant' %>
		</div>

		<div class="control-group">
			<%= f.label :address %>
			<%= f.text_field :address, placeholder: 'Change Alley, London, Greater London, EC3V 3LL' %>
		</div>

		<%= f.submit 'Sign up', :class => "btn" %>
	<% end -%>
</div>