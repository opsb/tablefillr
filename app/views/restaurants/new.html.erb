<div class="constrained">
	<h1>Signup</h1>

	<%= form_for @restaurant do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name, html: { placeholder: 'name of your restaurant' } %>

		<%= f.label :address %>
		<%= f.text_field :address, html: { placeholder: 'Change Alley, London, Greater London, EC3V 3LL' } %>

		<%= f.submit 'Sign up' %>
	<% end -%>
</div>